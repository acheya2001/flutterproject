rules_version = '2';

// Firebase Storage Security Rules pour Constat Tunisie
service firebase.storage {
  match /b/{bucket}/o {
    
    // ğŸ“ RÃ¨gles pour les constats PDF
    match /constats_complets/{sessionId}/{fileName} {
      // Permettre lecture Ã  tous les utilisateurs authentifiÃ©s
      allow read: if request.auth != null;
      
      // Permettre Ã©criture aux utilisateurs authentifiÃ©s
      allow write: if request.auth != null
        && request.auth.uid != null
        && fileName.matches('.*\\.pdf$');
    }
    
    // ğŸ“ RÃ¨gles pour les PDFs de test
    match /test_pdfs/{sessionId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ“ RÃ¨gles pour les demandes de contrats
    match /demandes_contrats/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // ğŸ“ RÃ¨gles pour les photos d'accidents
    match /accident_photos/{sessionId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // ğŸ“ RÃ¨gles pour les signatures
    match /signatures/{sessionId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // ğŸ“ RÃ¨gles pour les croquis
    match /croquis/{sessionId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // ğŸ“ RÃ¨gles par dÃ©faut - refuser tout le reste
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
